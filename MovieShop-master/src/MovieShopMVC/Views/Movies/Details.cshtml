@inject ICurrentUserService UserService
@using System.Globalization
@using ApplicationCore.Contracts.Services
@model ApplicationCore.Models.ResponseModels.MovieDetailsResponseModel

<div class="bg-image" style="background-image: url(@Model.BackdropUrl)">

    <div class="row">
        <div class="col-md-3 offset-2">

            <!-- Movie Card row -->
            <div>
                <img src="@Model.PosterUrl" class="card-img-top"/>
            </div>

        </div>
        <div class="col-md-4">
            <div class="row mt-2">
                <div class="col-12">
                    <h1 class="text-white">
                        @Model.Title
                    </h1>
                    <small class="text-muted"> @Model.Tagline </small>
                </div>

            </div>

            <div class="row">
                <div class="col-4 text-secondary font-weight-bold mt-2">
                    @Model.RunTime m | @Model.ReleaseDate.Value.Date.Year
                </div>
                <div class="col-8">

                    @foreach (var genre in Model.Genres)
                    {
                        <a class="badge badge-pill badge-dark ml-1" asp-action="Genre" asp-route-id="@genre.Id">
                            @genre.Name
                        </a>
                    }
                </div>
            </div>

            <div class="row">
                <div class="col-4 mt-3">
                    <h4>
                        <span class="badge @(Model.Rating.HasValue ? (Model.Rating.Value >= 4.00m ? "bg-success" : (Model.Rating.Value >= 2.50m ? "bg-warning text-dark" : "bg-danger")) : "bg-secondary")">
                            @(Model.Rating?.ToString("0.00") ?? "-.--")
                        </span>
                    </h4>
                </div>
            </div>

            <div class="row">
                <div class="col-12 text-light mt-2">
                    @Model.Overview
                </div>
            </div>
        </div>

        <div class="col-md-2 mt-4 offset-1">
            <ul class="list-group">
                <li class="list-group-item">


                @* </li>
                <li class="list-group-item">
                    <a class="btn btn-outline-light btn-lg btn-block btn-sm" asp-route-movieId="@Model.Id" asp-controller="Movies" asp-action="SubmitReview">
                        <i class="far fa-edit mr-1"></i>
                        REVIEW
                    </a>
                </li> *@
                @* <li class="list-group-item">
                    <button type="button"
                            class="btn btn-outline-light btn-lg btn-block btn-sm">
                        <i class="fas fa-play mr-1"></i> TRAILER
                    </button>
                </li> *@

                @if (Model.IsPurchased)
                {
                    @* <li class="list-group-item">
                        <button type="button" class="btn btn-outline-light btn-lg btn-block btn-sm" asp-route-id="@Model.Id" asp-controller="Review" asp-action="Create">
                            <i class="far fa-edit mr-1"></i> REVIEW
                        </button>
                    </li> *@
                    <li class="list-group-item">
                        <a class="btn btn-outline-light btn-lg btn-block btn-sm" asp-route-movieId="@Model.Id" asp-controller="Review" asp-action="Create">
                            <i class="far fa-edit mr-1"></i> REVIEW
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a class="btn btn-light btn-lg btn-block btn-sm" asp-route-id="@Model.Id" asp-controller="User" asp-action="WatchMovie">
                            WATCH MOVIE
                        </a>
                    </li>
                }
                else
                {
                    <li class="list-group-item">
                        <a class="btn btn-light btn-lg btn-block btn-sm" asp-route-id="@Model.Id" asp-controller="User" asp-action="BuyMovie">
                            BUY @Model.Price
                        </a>
                    </li>
                }
            </ul>
        </div>

    </div>
</div>


<div class="row mt-4">
    <div class="col-4 moviefacts">
        <h5>MOVIE FACTS</h5>
        <hr>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <i class="far fa-calendar-alt mr-2"></i>Release Date
                <span class="badge rounded-pill bg-dark">@Model.ReleaseDate.Value.ToShortDateString()</span>
            </li>

            <li class="list-group-item">
                <i class="fas fa-hourglass-half mr-2"></i>Run Time
                <span class="badge rounded-pill bg-dark">@Model.RunTime.Value m</span>
            </li>
            <li class="list-group-item">
                <i class="far fa-money-bill-alt"></i> Box Office
                <span class="badge rounded-pill bg-dark">
                    @NumberFormatInfo.CurrentInfo.CurrencySymbol
                    @Model.Revenue?.ToString("C0")
                </span>
            </li>

            <li class="list-group-item">
                <i class="fas fa-dollar-sign mr-2"></i> Budget
                <span class="badge rounded-pill bg-dark">
                    @NumberFormatInfo.CurrentInfo.CurrencySymbol
                    @Model.Budget?.ToString("C0")
                </span>
            </li>

            <li class="list-group-item">
                <i class="fab fa-imdb"></i>

                <a href="@Model.ImdbUrl"
                   class="text-dark ml-3"
                   target="_blank">
                    <i class="fas fa-share-square mr-2"></i>
                </a>
            </li>

        </ul>

        <br>

        <h5>TRAILERS</h5>
        <hr>
        <ul class="list-group list-group-flush">
            @foreach (var trailer in Model.Trailers)
            {
                <li class="list-group-item">
                    <i class="fab fa-youtube mr-2"></i>
                    <a href="@trailer.TrailerUrl" target="_blank" class="trailer-link">@trailer.Name</a>
                </li>
            }
        </ul>
    </div>

    <div class="col-4 offset-1">
        <h5>CAST</h5>

        <table class="table">

            <tbody>


            @foreach (var cast in Model?.Casts)
            {
                <tr>
                    <td>
                        <img src="@cast.ProfilePath"
                             class="cast-small-img rounded-circle"
                             alt="@cast.Name"/>
                    </td>
                    <td> @cast.Name </td>
                    <td> @cast.Character</td>
                </tr>
            }


            </tbody>
        </table>

    </div>
</div>