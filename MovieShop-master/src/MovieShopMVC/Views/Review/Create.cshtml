@model ApplicationCore.Models.RequestModels.ReviewRequestModel

@{
    ViewData["Title"] = "Submit Review";
}

<h2>Submit Review for @ViewBag.MovieTitle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Rating" class="control-label"></label>
        <select asp-for="Rating" class="form-control" required>
            <option value="">Select Rating</option>
            @for (int i = 1; i <= 5; i++)
            {
                <option value="@i">@i Star(s)</option>
            }
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReviewText" class="control-label"></label>
        <textarea asp-for="ReviewText" class="form-control" required></textarea>
        <span asp-validation-for="ReviewText" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="MovieId" />
        <input type="hidden" asp-for="UserId" />
        <input type="submit" value="Submit Review" class="btn btn-primary" />
    </div>
</form>
