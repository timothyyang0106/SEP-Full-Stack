@inject ICurrentUserService CurrentUserService
@using ApplicationCore.Contracts.Services
@model ApplicationCore.Models.ResponseModels.MovieDetailsResponseModel


<form method="post" asp-controller="User" asp-action="BuyMovie">
    <div class="card mb-3 container shadow ">
        <div class="row justify-content-md-center">
            <div class="col-md-4">
                <img src="@Model.PosterUrl" alt="@Model.Title" class="card-img-top">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5>Order Summary</h5>
                    <hr/>
                    <div class="row">
                        <div class="col-md-6 h5">
                            @Model.Title
                        </div>
                        <div class="col-md-6 h5">
                            $@Model.Price
                        </div>
                        <div class="col-12" >
                            <input type="hidden" name="MovieId" value="@Model.Id" />
                            <input type="submit" value="Confirm Purchase" class="btn btn-primary btn-lg btn-block"/>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</form>